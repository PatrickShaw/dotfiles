! vim: ft=xdefaults
!ROFI config
! "Enabled modi"
rofi.modi:  run,drun,window,ssh

! "Terminal to use"
!rofi.terminal: alacritty
!rofi.terminal: rofi-sensible-terminal
!set TERMINAL env or set it here
!sensible is just a wrapper
rofi.terminal: alacritty
!rofi.terminal: st
! rofi.terminal: xst
!rofi.terminal: rofi-sensible-terminal

! env is wrong when running rofi
! "Run command to execute"
! interactive, but seems like wrong apprach
!rofi.run-command: zsh -c -i '{cmd}'
rofi.run-command: zsh -i -c '{cmd}'

! "Run command to execute that runs in shell"
rofi.run-shell-command: {terminal} -e {cmd}

! "Command executed on accep-entry-custom for window modus"
rofi.window-command: xkill -id {window}

! "Window fields to match in window mode"
!rofi.window-match-fields: title
rofi.window-match-fields: all

! DRUN OPTIONS
