#! /bin/sh
# 8 workspaces
#bspc monitor -d o o o o o o o o
ws1=
ws2=o
pichr=
pistm=
pitrm=
piset=
#make if here based on hostname and shit
bspc monitor -d $pitrm $pichr $pistm $ws2 $ws2 $ws2 $ws2 $ws2
#----------------
# SETTINGS
#----------------
bspc config top_padding				16
bspc config border_width         	2
bspc config window_gap          	10
bspc config split_ratio          	0.50
bspc config borderless_monocle   	true
bspc config gapless_monocle      	true
#bspc config focus_by_distance    	true
bspc config focus_follows_pointer	true
#----------------
# COLORS
#----------------t
#D64937
bspc config focused_border_color		"#d64937"
bspc config normal_border_color         "#2d2d2d"
bspc config active_border_color         "#2d2d2d"
#bspc config focused_border_color        "#2d2d2d"
# dont know if necessary
bspc config ignore_ewmh_focus			true
#this puts layout in monocle mode, so the steam can start in this setting
bspc desktop $pichr --layout monocle
#----------------
# RULES
#----------------
bspc rule -a Google-chrome:google-chrome -o node=@^1:^2:/ follow=false
bspc rule -a keepassxc:keepassxc -o node=@^1:^8:/
bspc rule -a Steam:Steam -o node=@^1:^3:/1 follow=false
bspc rule -a Steam:Steam -o node=@^1:^3:/2 follow=false
#----------------
# AUTOSTART
#----------------
#cursor
xsetroot -cursor_name left_ptr &
redshift -c ~/.config/redshift.conf &
sxhkd -c ~/.config/sxhkd/sxhkdrc &
~/.config/panel/panel &
#welcome urxvt with gentoo logo
urxvt -e bash -c "neofetch -d '-shell'; bash" &
#compton --config ${HOME}/.compton.conf &
google-chrome-stable &
steam &
keepassxc &
